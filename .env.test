# 테스트 환경 설정
NODE_ENV=test
PORT=3001
API_PREFIX=api
API_VERSION=v1

# PostgreSQL (테스트용 - Docker 컨테이너)
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123
POSTGRES_DB=secondhand_test_db
DATABASE_URL="postgresql://postgres:postgres123@localhost:5433/secondhand_test_db?schema=public"

# MongoDB (테스트용 - Docker 컨테이너와 동일한 인증 사용)
MONGODB_URI=mongodb://root:password@localhost:27017/secondhand_test_db?authSource=admin

# Redis (테스트용)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT (테스트용 키)
JWT_SECRET=test-jwt-secret-key
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=test-refresh-secret
JWT_REFRESH_EXPIRES_IN=7d

# RabbitMQ (테스트환경)
RABBITMQ_URL=amqp://rabbitmq:password@rabbitmq-test:5672
