# 개발환경 설정
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1

# 데이터베이스 (개발환경)
DB_HOST=postgres-dev
DB_PORT=5432
DB_USERNAME=nestjs
DB_PASSWORD=password
DB_NAME=secondhand_dev

# MongoDB (개발환경)
MONGO_URI=mongodb://root:password@mongodb-dev:27017/secondhand_products_dev?authSource=admin

# Redis (개발환경)
REDIS_HOST=redis-dev
REDIS_PORT=6379

# JWT (개발용 키)
JWT_SECRET=dev-jwt-secret-key-not-for-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=dev-refresh-secret
JWT_REFRESH_EXPIRES_IN=7d

# RabbitMQ (개발환경)
RABBITMQ_URL=amqp://rabbitmq:password@rabbitmq-dev:5672

# Elasticsearch (개발환경)
ELASTICSEARCH_HOST=elasticsearch-dev
ELASTICSEARCH_PORT=9200

# 로깅 (개발환경)
LOG_LEVEL=debug
LOG_FORMAT=dev

# 파일 업로드 (개발환경)
MAX_FILE_SIZE=5242880
MAX_FILES_COUNT=5
UPLOAD_PATH=./uploads

# 개발용 외부 API (테스트 키)
TOSS_PAYMENTS_SECRET_KEY=test_sk_dev
TOSS_PAYMENTS_CLIENT_KEY=test_ck_dev

# 개발용 보안 설정
BCRYPT_SALT_ROUNDS=10
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:8080

# 개발용 Rate Limiting (느슨한 설정)
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=1000

# 디버깅 설정
DEBUG_MODE=true
ENABLE_API_DOCS=true