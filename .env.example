# =================================
# 데이터베이스 설정
# =================================

# PostgreSQL (주 데이터베이스)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123
POSTGRES_DB=secondhand_db
DATABASE_URL="postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}?schema=public"

# MongoDB (비구조화 데이터)
MONGODB_URI=mongodb://localhost:27017/secondhand_db

# Redis (캐싱 및 세션)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# =================================
# 메시지 브로커
# =================================

# RabbitMQ
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=admin123
RABBITMQ_VHOST=/
RABBITMQ_MANAGEMENT_PORT=15672

# =================================
# 인증 및 보안
# =================================

# JWT 설정
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d

# 비밀번호 해싱
BCRYPT_SALT_ROUNDS=10

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# =================================
# 파일 업로드 (AWS S3)
# =================================

AWS_REGION=ap-northeast-2
AWS_S3_BUCKET=secondhand-uploads
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# 파일 업로드 제한
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# =================================
# 애플리케이션 설정
# =================================

NODE_ENV=development
PORT=3000
API_PREFIX=api
API_VERSION=v1

# CORS 설정
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# =================================
# 로깅 설정 (Winston)
# =================================

LOG_LEVEL=debug
LOG_DIR=logs
LOG_MAX_FILES=30d
LOG_MAX_SIZE=20m
LOG_DATE_PATTERN=YYYY-MM-DD

# =================================
# 외부 API 설정
# =================================

# 결제 게이트웨이 (예: Toss Payments)
PAYMENT_API_KEY=your-payment-api-key
PAYMENT_SECRET_KEY=your-payment-secret-key
PAYMENT_WEBHOOK_SECRET=your-payment-webhook-secret

# 알림 서비스 (예: Firebase Cloud Messaging)
FCM_SERVER_KEY=your-fcm-server-key
FCM_PROJECT_ID=your-fcm-project-id

# =================================
# 개발 도구
# =================================

# Swagger UI
SWAGGER_ENABLED=true
SWAGGER_PATH=api-docs

# 디버그 모드
DEBUG=false
