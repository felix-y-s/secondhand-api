# 데이터베이스 설정
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=nestjs
DB_PASSWORD=password
DB_NAME=secondhand_db
DB_REPLICA_HOST=localhost
DB_REPLICA_PORT=5433

# MongoDB 설정
MONGO_URI=mongodb://localhost:27017/secondhand_products
MONGO_TEST_URI=mongodb://localhost:27017/secondhand_products_test

# Redis 설정
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT 설정
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=1d
JWT_REFRESH_SECRET=your-refresh-secret-here
JWT_REFRESH_EXPIRES_IN=7d

# 외부 API 설정
# 결제 게이트웨이
TOSS_PAYMENTS_SECRET_KEY=test_sk_xxx
TOSS_PAYMENTS_CLIENT_KEY=test_ck_xxx
KG_INICIS_MID=your_merchant_id
KG_INICIS_SIGN_KEY=your_sign_key

# 택배사 API
CJ_LOGISTICS_API_KEY=your_cj_api_key
LOTTE_GLOBAL_API_KEY=your_lotte_api_key

# SMS/알림 서비스
NAVER_CLOUD_ACCESS_KEY=your_naver_access_key
NAVER_CLOUD_SECRET_KEY=your_naver_secret_key
KAKAO_REST_API_KEY=your_kakao_rest_api_key

# 본인인증 서비스
NICE_CLIENT_ID=your_nice_client_id
NICE_SECRET_KEY=your_nice_secret_key
KCB_SITE_CODE=your_kcb_site_code
KCB_SITE_PASSWORD=your_kcb_password

# OAuth 소셜 로그인
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
KAKAO_CLIENT_ID=your_kakao_client_id
KAKAO_CLIENT_SECRET=your_kakao_client_secret
NAVER_CLIENT_ID=your_naver_client_id
NAVER_CLIENT_SECRET=your_naver_client_secret

# AWS S3 파일 업로드
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=ap-northeast-2
S3_BUCKET_NAME=secondhand-images

# RabbitMQ 메시지 큐
RABBITMQ_URL=amqp://localhost:5672
RABBITMQ_USER=rabbitmq
RABBITMQ_PASSWORD=password

# Elasticsearch 검색 엔진
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=password

# 애플리케이션 설정
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1

# 보안 설정
BCRYPT_SALT_ROUNDS=12
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# 로깅 설정
LOG_LEVEL=info
LOG_FORMAT=json

# 파일 업로드 제한
MAX_FILE_SIZE=10485760
MAX_FILES_COUNT=10
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp

# 이메일 설정
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# 헬스체크 설정
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_TIMEOUT=5000